<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
<script type="text/javascript" src="js/scripts.js"></script>
</body>
<script>
    $(document).ready(function (){
        var div = "<div style='background-color:white; height:30px; border:solid black 1px; color:black;'> <div class='text left'>";
        var endDiv = "</div> <button class='right' type='button' name='removeBtn'>x</button></div>"
        $("[name|='nextBtn']").click(function (){
            window.location.href = "reg3.html";
        });

        $("[name|='cancelBtn']").click(function (){
            window.location.href = "index.html";
        });

        $("[name|='noBtn']").click(function (){
            window.location.href = "reg3.html";
        });

        $("[name|='yesBtn']").click(function (){
            $("#armyRegDiv").css("display", "none");
            $("#regDiv").css("display", "block");
        });

        $("#detachment").on("click","[name|='removeBtn']", function (){
            $(this).closest("div").remove();
        });

        $("#unit").on("click","[name|='removeBtn']", function (){
            $(this).closest("div").remove();
        });

        $("[name|='detachmentBtn']").click(function () {
            var detach = $("#armyDetachments").val();
            $("#armyDetachments").val("");
            if(detach.length != 0) {
                var addStr = div + detach + endDiv;
                $("#detachment").append(addStr);
            }
        });

        $("[name|='unitBtn']").click(function () {
            var unit = $("#armyUnit").val();
            $("#armyUnit").val("");
            if(unit.length != 0) {
                var addStr = div + unit + endDiv;
                $("#unit").append(addStr);
            }
        });
    });
</script>
